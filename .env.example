# App Configuration
NODE_ENV=development

# Translation API (Google Translate - Free Tier)
# For production, consider using official API with key
TRANSLATION_API_ENDPOINT=https://translate.googleapis.com/translate_a/single
TRANSLATION_API_KEY=

# OCR Configuration
OCR_ENGINE=tesseract
OCR_LANGUAGE_DATA_PATH=./resources/tesseract-data

# Database
DATABASE_PATH=./data/history.db

# App Settings
DEFAULT_SOURCE_LANGUAGE=auto
DEFAULT_TARGET_LANGUAGE=th
OVERLAY_OPACITY=90
OVERLAY_FONT_SIZE=16

# Shortcuts (default values)
SHORTCUT_CAPTURE=CommandOrControl+Shift+X
SHORTCUT_HIDE_OVERLAY=CommandOrControl+Shift+H
SHORTCUT_SHOW_HISTORY=CommandOrControl+Shift+H

# Development
DEV_PORT=5173

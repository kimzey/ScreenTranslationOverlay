# Tran Overlay Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ============================================
# Translation API Keys
# ============================================

# Google Translate API Key
# Get your API key from: https://console.cloud.google.com/
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# DeepL API Key (optional - if you want to use DeepL)
# Get your API key from: https://www.deepl.com/pro-api
DEEPL_API_KEY=your_deepl_api_key_here

# Default Translation Provider
# Options: google, deepl, local
DEFAULT_TRANSLATION_PROVIDER=google

# ============================================
# OCR Configuration
# ============================================

# Tesseract Data Path
# Path to Tesseract language data (tessdata)
TESSERACT_DATA_PATH=/usr/share/tesseract-ocr/4.00/tessdata

# Default OCR Languages
# Comma-separated list of language codes (e.g., eng,tha,jpn)
DEFAULT_OCR_LANGUAGES=eng,tha

# Minimum Confidence Threshold (0-100)
# Only use OCR results with confidence above this threshold
OCR_MIN_CONFIDENCE=60

# Enable Image Preprocessing
# Set to true to enable image preprocessing before OCR
OCR_ENABLE_PREPROCESSING=true

# Maximum Image Size (in bytes)
# Maximum size of image to process (default: 10MB)
OCR_MAX_IMAGE_SIZE=10485760

# ============================================
# Database Configuration
# ============================================

# History Database Path
# Path to SQLite database for translation history
HISTORY_DB_PATH=./data/history.db

# Cache Database Path
# Path to SQLite database for translation cache
CACHE_DB_PATH=./data/cache.db

# Cache TTL (in hours)
# How long to cache translation results
CACHE_TTL_HOURS=1

# Maximum Cache Size (number of entries)
# Maximum number of entries to keep in cache
CACHE_MAX_SIZE=5000

# ============================================
# Application Settings
# ============================================

# Application Environment
# Options: development, staging, production
APP_ENV=development

# Application Port
# Port for development server
APP_PORT=1420

# Application Log Level
# Options: trace, debug, info, warn, error
LOG_LEVEL=info

# Enable Debug Mode
# Set to true to enable debug features
DEBUG_MODE=false

# ============================================
# Overlay Configuration
# ============================================

# Default Overlay Position
# Default X,Y coordinates for overlay (comma-separated)
OVERLAY_DEFAULT_X=100
OVERLAY_DEFAULT_Y=100

# Default Overlay Size
# Default width,height for overlay (comma-separated)
OVERLAY_DEFAULT_WIDTH=400
OVERLAY_DEFAULT_HEIGHT=200

# Default Overlay Opacity
# Opacity value between 0.0 (transparent) and 1.0 (opaque)
OVERLAY_DEFAULT_OPACITY=0.95

# Enable Auto-Close
# Automatically close overlay after specified delay
OVERLAY_AUTO_CLOSE=true

# Auto-Close Delay (in milliseconds)
# Time before overlay auto-closes
OVERLAY_AUTO_CLOSE_DELAY=5000

# Show Original Text
# Show original text above translation in overlay
OVERLAY_SHOW_ORIGINAL=true

# ============================================
# Hotkey Configuration
# ============================================

# Default Capture Hotkey
# Hotkey to start screen capture
HOTKEY_CAPTURE=Control+Shift+A

# Default Translate Hotkey
# Hotkey to capture and translate directly
HOTKEY_TRANSLATE=Control+Shift+T

# Default Close Overlay Hotkey
# Hotkey to close overlay
HOTKEY_CLOSE_OVERLAY=Escape

# Default Open Settings Hotkey
# Hotkey to open settings panel
HOTKEY_OPEN_SETTINGS=Control+Shift+S

# ============================================
# Rate Limiting
# ============================================

# Translation API Rate Limit (requests per minute)
# Maximum number of API calls per minute
TRANSLATION_RATE_LIMIT=100

# OCR Rate Limit (operations per minute)
# Maximum number of OCR operations per minute
OCR_RATE_LIMIT=30

# ============================================
# Security
# ============================================

# Enable HTTPS for API Calls
# Set to false only for development
ENABLE_HTTPS=true

# Verify SSL Certificates
# Set to false only if you have certificate issues
VERIFY_SSL_CERTIFICATES=true

# API Key Storage
# Where to store API keys (system, file, memory)
API_KEY_STORAGE=system

# ============================================
# Performance
# ============================================

# Enable Caching
# Enable translation result caching
ENABLE_CACHE=true

# Cache Preloading
# Preload common translations on startup
CACHE_PRELOAD=false

# Parallel Processing
# Enable parallel processing for multiple translations
ENABLE_PARALLEL_PROCESSING=true

# Max Parallel Operations
# Maximum number of parallel operations
MAX_PARALLEL_OPERATIONS=3

# ============================================
# Development Settings
# ============================================

# Enable Hot Reload
# Automatically reload on code changes
ENABLE_HOT_RELOAD=true

# Enable Source Maps
# Generate source maps for debugging
ENABLE_SOURCE_MAPS=true

# Enable Test Mode
# Run in test mode (mock APIs)
TEST_MODE=false

# Mock API Responses
# Use mock API responses instead of real calls
MOCK_API_RESPONSES=false

# ============================================
# Analytics & Telemetry
# ============================================

# Enable Anonymous Analytics
# Send anonymous usage data for improvement
ENABLE_ANALYTICS=false

# Analytics Endpoint
# URL for analytics endpoint
ANALYTICS_ENDPOINT=

# ============================================
# Proxy Settings (Optional)
# ============================================

# HTTP Proxy
# HTTP proxy URL (if needed)
HTTP_PROXY=

# HTTPS Proxy
# HTTPS proxy URL (if needed)
HTTPS_PROXY=

# No Proxy
# Comma-separated list of hosts to bypass proxy
NO_PROXY=localhost,127.0.0.1

# ============================================
# Advanced Settings
# ============================================

# Thread Pool Size
# Number of threads for parallel processing
THREAD_POOL_SIZE=4

# Memory Limit (in MB)
# Maximum memory usage for the application
MEMORY_LIMIT=512

# Temp Directory
# Directory for temporary files
TEMP_DIR=./temp

# Log Directory
# Directory for log files
LOG_DIR=./logs

# Log File Max Size (in MB)
# Maximum size of individual log file
LOG_FILE_MAX_SIZE=10

# Log File Max Count
# Maximum number of log files to keep
LOG_FILE_MAX_COUNT=5
